<script>
	const button = document.getElementById('submitButton')
	const toast = document.getElementById('success-form')
	const nameInput = document.getElementById('name')
	const emailInput = document.getElementById('email')
	const commentInput = document.getElementById('comment')
	const nameError = document.getElementById('nameError')
	const emailError = document.getElementById('emailError')
	const commentError = document.getElementById('commentError')

	button.addEventListener('click', submitForm)

	async function submitForm(event) {
		event.preventDefault()

		nameError.innerText = ''
		emailError.innerText = ''
		commentError.innerText = ''


		const name = nameInput.value
		const email = emailInput.value
		const message = commentInput.value

		console.log(name, email, message)

		try {
			const response = await fetch('https://functions.yandexcloud.net/d4e5eockcm8v94h3f1q2', {
				method: 'POST',
				headers: {
					'Accept': 'application/json',
					'Content-Type': 'application/json',
				},
				body: JSON.stringify({ name, email, message })
			})

			const result = await response.json()

			if (result.errors) {
				const errors = result.errors
				if (errors.name) {
					nameError.innerText = errors.name.join(', ')
				}
				if (errors.email) {
					emailError.innerText = errors.email.join(', ')
				}
				if (errors.message) {
					commentError.innerText = errors.message.join(', ')
				}
			} else {
				toast.classList.remove('invisible')
				toast.classList.add('show');

				clearForm()

				setTimeout(() => {
					toast.classList.remove('show')
					toast.classList.add('invisible')
				}, 5000)
			}
		} catch (error) {
			console.log(error)
		}
	}

	function clearForm() {
		nameInput.value = '';
		emailInput.value = '';
		commentInput.value = '';
	}
</script>


