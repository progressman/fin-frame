---
const { title, tag, subtitle, icon, link } = Astro.props
---

<div class="min-h-[343px] lg:min-h-[376px] bg-white p-4 flex flex-col justify-between rounded-[32px]">
	<div>
		<div class="flex justify-between">
			<div class="flex-col">
				<div class="w-fit rounded-xl bg-[#D6F2BD3D] mb-3">
					<p class="p-3 lg:text-[20px] text-[#60996A]">{tag}</p>
				</div>
				<h2 class="text-[22px] leading-8 lg:text-[36px] lg:leading-[50px] mb-3">{title}</h2>
			</div>
			<div><img class="lg:w-20 lg:h-20" src={icon} alt={`${title} icon`}></div>
		</div>
		<p class="text-[#53705D] lg:text-[20px] lg:leading-8">{subtitle}</p>
	</div>


	<a href={link} class="w-fit rounded-[2rem]">Подробнее
		<span class="flex justify-center items-center bg-white size-8 rounded-full">
			<svg width="8" height="12" fill="none" xmlns="http://www.w3.org/2000/svg">
				<path d="M4.6 6 0 1.4 1.4 0l6 6-6 6L0 10.6 4.6 6Z" fill="#386340" />
			</svg>
		</span>
	</a>
</div>

<style>
    a {
        border: 2px solid #386340;
        color: #386340;
        display: flex;
        align-items: center;
        padding: 10px 4px 10px 14px;
        font-weight: 500;
        @apply lg:text-[20px]
    }
</style>
